<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.faizan.fuelapp.RegistrationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logoIcon"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:padding="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="80dp"
                android:background="@drawable/facebook"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/google_plus"
                android:layout_marginStart="50dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:orientation="horizontal">

            <View
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#c2c2c2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OR"
                android:layout_marginStart="10dp"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="#000"/>

            <View
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:background="#c2c2c2" />

        </LinearLayout>

        <EditText
            android:id="@+id/loginEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="#000000"
            android:hint="First Name"
            android:ems="10"
            android:background="@drawable/auth_inputs"
            android:drawablePadding="12dp"
            android:padding="10dp"
            android:textColorHint="#c2c2c2"
            android:maxLines="1"
            android:layout_marginTop="15dp"
            />

        <EditText
            android:id="@+id/logInPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="#000000"
            android:ems="10"
            android:drawablePadding="12dp"
            android:padding="10dp"
            android:hint="Last Name"
            android:textColorHint="#c2c2c2"
            android:maxLines="1"
            android:background="@drawable/auth_inputs"
            android:layout_marginTop="4dp" />

        <EditText
            android:id="@+id/regEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:hint="Email address"
            android:ems="10"
            android:background="@drawable/auth_inputs"
            android:drawablePadding="12dp"
            android:padding="10dp"
            android:textColorHint="#c2c2c2"
            android:maxLines="1"
            android:layout_marginTop="4dp"
            />

        <EditText
            android:id="@+id/regPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:ems="10"
            android:drawablePadding="12dp"
            android:padding="10dp"
            android:hint="Password"
            android:textColorHint="#c2c2c2"
            android:maxLines="1"
            android:background="@drawable/auth_inputs"
            android:layout_marginTop="4dp" />

        <EditText
            android:id="@+id/cnfrmPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:ems="10"
            android:drawablePadding="12dp"
            android:padding="10dp"
            android:hint="Confirm Password"
            android:textColorHint="#c2c2c2"
            android:maxLines="1"
            android:background="@drawable/auth_inputs"
            android:layout_marginTop="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <CheckBox
                android:layout_width="30dp"
                android:layout_height="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I Agree to"
                android:layout_marginStart="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Term of Use"
                android:textColor="#ea382e"
                android:layout_marginStart="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="and"
                android:layout_marginStart="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Privacy Policy."
                android:textColor="#ea382e"
                android:layout_marginStart="5dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/regButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/auth_button"
            android:text="Register"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textAllCaps="true"
            android:clickable="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already Register ?"
                android:textColor="#ea382e"
                android:alpha="0.7"/>
            <TextView
                android:id="@+id/loginBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LogIn"
                android:layout_marginStart="5dp"
                android:textStyle="bold"
                android:textColor="#ea382e"
                />

        </LinearLayout>




    </LinearLayout>

</ScrollView>
